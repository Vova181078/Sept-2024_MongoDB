    age:{
        $nin:[12, 25,33,48,16,18]
    }
})

db.users.find({
    rating:{$gt:2}
})
db.users.find({
    rating:{$gte:2}
})

db.users.find({
    rating:{$lt:2}
})
db.users.find({
    rating:{$lte:2}
})

